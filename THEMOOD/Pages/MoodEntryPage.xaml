<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:THEMOOD.ViewModels"
             xmlns:controls="clr-namespace:THEMOOD.Controls"
             x:Class="THEMOOD.Pages.MoodEntryPage">

    <ContentView.BindingContext>
        <vm:MoodEntry_VM/>
    </ContentView.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="logo_only.png"/>
            <Button
            Text="Add Mood"
            Clicked="AddMood_Clicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

            <CollectionView 
            x:Name="MoodLog"
            SelectionMode="None"
            Margin="5">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:MoodEntry_VM">
                        <Frame BorderColor="Black" 
                           Padding="5" CornerRadius="50">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="white" Offset="0.0" />
                                    <GradientStop Color="LightPink" Offset="0.5" />
                                    <GradientStop Color="Pink" Offset="1.0" />
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Grid
                                RowDefinitions="Auto, Auto"
                                ColumnDefinitions="2*, 3*, 3*"
                                Padding="10">
                                <Label
                                    Text="{Binding Mood}"
                                    TextColor="Black"
                                    Grid.Column="1"
                                    FontAttributes="Bold"/>

                                <Label
                                    Text="{Binding FormattedDate}"
                                    TextColor="Black"
                                    FontAttributes="Italic"
                                    Grid.Column="2"/>

                                <Label
                                    Text="{Binding Note}"
                                    TextColor="Black"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"/>

                                <Label
                                    Text="{Binding MoodIcon}"
                                    FontSize="70"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Margin="-10,0,10,0"
                                    Grid.Column="0"
                                    Grid.RowSpan="2"/>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentView>