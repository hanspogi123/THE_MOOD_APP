<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:THEMOOD"
       xmlns:logins="clr-namespace:THEMOOD.Logins"
       xmlns:pages="clr-namespace:THEMOOD.Pages"
       x:Class="THEMOOD.AppShell"
       Shell.FlyoutBehavior="Disabled">

   
    <TabBar Route="main">
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="main" />
    </TabBar>

    <ShellContent
        ContentTemplate="{DataTemplate logins:Login}"
        Route="login" />

    <ShellContent
        ContentTemplate="{DataTemplate logins:SignUp}"
        Route="signup" />

    <ShellContent Title="Mood Entry"
              ContentTemplate="{DataTemplate pages:MoodEntryPage}"
              Route="moodentry" />

    <ShellContent
        Title="Calendar"
        ContentTemplate="{DataTemplate pages:CalendarView}"
        Route="CalendarView" />


</Shell>