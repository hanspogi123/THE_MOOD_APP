<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:THEMOOD.Controls"
             xmlns:viewmodels="clr-namespace:THEMOOD.ViewModels"
             x:Class="THEMOOD.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:NavBarViewModel x:Name="NavViewModel" />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*, Auto">
        <!-- Your main content goes here -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20">
                <Label Text="Main Content" FontSize="24" />
                <!-- Other content -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Navigation Bar - Using the custom control -->
        <controls:CustomNavBar Grid.Row="1" x:Name="NavBar" />
    </Grid>
</ContentPage>